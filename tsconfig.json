{
  "compilerOptions": {
    /* === Directorios === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Entorno de ejecuci贸n === */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* === Configuraci贸n de compilaci贸n === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,

    /* === Limpieza de c贸digo === */
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    /* === Opcional: mejora DX === */
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
